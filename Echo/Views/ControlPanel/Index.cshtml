@model AR.ARNews.User
@{
    ViewData["Title"] = "Login";
}

<style>
    #ControlPanel {
        text-align: center;
        width: 200px;
        margin: auto;
    }

    #ControlPanel input {
        text-align: center;
    }

    #ContactForm {
        width: 100%;
        background-color: #efefef;
        text-align: center;
        position: relative;
        padding-top: 20px;
        border-top: 4px solid rgb(255, 0, 15);
        border-bottom: 4px solid rgb(255, 0, 15);
        font-family: Raleway-Regular;
    }

        #ContactForm input, #ContactForm textarea {
            width: 80%;
            border: 1px solid lightgray;
            border-radius: 3px;
            margin-top: 3px;
            margin-bottom: 3px;
            font-size: 13px;
            padding: 10px;
            padding-left: 15px;
            padding-right: 15px;
        }

        #ContactForm button {
            background-color: rgb(255, 0, 15);
            border: none;
            color: white;
            font-family: Raleway-Bold;
            font-size: 12px;
            border-radius: 3px;
            padding: 10px 25px 10px 25px;
            margin-bottom: 20px;
            margin-top: 10px;
        }
</style>
<div class="InnerWrapper">
    <div id="ControlPanel">
        <br />
        <br />
        @using (Html.BeginForm("AUlogujKorisnika", "ControlPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div id="ContactForm">
                <h3 style="font-family: Raleway-Regular; color: #4c4145; margin: 0; padding: 20px 40px 0px 40px; margin-bottom: 20px; font-size: 18px">
                    Control panel
                </h3>
                <br />
                <label>Username</label><br />
                @Html.TextBoxFor(k => k.Username)
                <br />

                <label>Password</label><br />
                @Html.TextBoxFor(k => k.Password, new { @type = "password" })
                <br />
                <button onclick="_wait()">Login</button>
                <br />
                <br />
                <br />
            </div>
        }
    </div>
</div>