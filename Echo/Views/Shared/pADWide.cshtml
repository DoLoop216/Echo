
<style>
    .ADWide {
        position: relative;
        margin: 5px auto;
        text-align: center;
    }

    .ADWide img {
        max-width: 90%;
    }
</style>
@{ 
    List<AR.ARNews.Banner> li = AR.ARNews.Banner.List(2);
    AR.ARNews.Banner b = li[Program.rnd.Next(li.Count - 1)];
}
<div class="ADWide">
    <div class="CoverBanner" style="height: 250px;">
        <img src="@b.Image" onclick="window.location.href='@b.Redirect'" style="max-height: 100%; width: 100%" />
    </div>
</div>

